{
  "name": "leetcode-typescript",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "build": "tsc -p tsconfig.app.json",
    "typecheck": "tsc --noEmit -p tsconfig.app.json && tsc --noEmit -p tsconfig.vitest.json && tsc --noEmit -p tsconfig.node.json",
    "format": "prettier --write \"{src/**/*.ts,vitest.config.ts}\"",
    "format:check": "prettier --check \"{src/**/*.ts,vitest.config.ts}\"",
    "lint": "eslint \"{src/**/*.ts,vitest.config.ts}\"",
    "check": "npm run format:check && npm run lint && npm run typecheck && npm run test"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "~22.16.0",
    "eslint": "^9.0.0",
    "eslint-plugin-jsdoc": "^59.1.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "prettier": "^3.6.0",
    "typescript-eslint": "^8.0.0",
    "typescript": "~5.9.0",
    "vitest": "^2.1.4"
  }
}
